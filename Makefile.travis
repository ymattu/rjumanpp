install:
  # Boost
	mkdir download &&\
	wget https://dl.bintray.com/boostorg/release/1.65.1/source/boost_1_65_1.tar.gz -O /download/boost.tar.xz &&\
  tar xzvf /download/boost.tar.gz -C /download &&\
  cd /download/boost &&\
  ./bootstrap.sh &&\
  ./b2 install -j2
  # JUMAN++
	wget http://lotus.kuee.kyoto-u.ac.jp/nl-resource/jumanpp/jumanpp-$(JVER).tar.xz -O /download/jumanpp.tar.xz &&\
	tar xJvf /download/jumanpp.tar.xz -C /download &&\
	cd /download/jumanpp-$(JVER) &&\
	./configure --prefix=/usr/local/ && make && make install &&\
  rm -rf /download/* &&\
  rm -rf /var/cache/apk/*
