before_install:
	sudo apt-get update
	sudo apt-get install build-essential g++ python-dev autotools-dev libicu-dev build-essential libbz2-dev
	sudo apt-get install gcc-4.9 google-perftools libgoogle-perftools-dev libboost-all-dev cmake

install:
	# JUMAN++
	mkdir Downloads
	cd Downloads
	wget http://lotus.kuee.kyoto-u.ac.jp/nl-resource/jumanpp/jumanpp-$(JVER).tar.xz
	tar xJvf jumanpp-$(JVER).tar.xz
	cd jumanpp-$(JVER)
	mkdir bld
	cd bld
	.cmake ..
	sudo make
	sudo make install
